@import "~common/stylus/variable.styl"
.tab
  width:100%
  height:50px
  background:$tab-background
  position:relative
  .tab-item
    display:inline-block
    width:80px
    height:50px
    line-height:50px
    text-align: center
    color: $tab-text-color
    &.router-link-active
      color: $tab-text-active-color
    .tab-link
      padding: 16px 5px
  .slide-wrapper
    position:absolute
    top:50px
    left:80px
    z-index:100
    border-radius:5px
    background:$tab-slide-background
    padding:25px 50px
    display:flex
    .item
      flex:1
      margin-left:15px
      .title
        border-bottom:1px solid $tab-slide-border-color
        font-size:14px
        margin-bottom: 15px
        .tab-item
          text-align:left
          .tab-link
            padding: 25px 0px
      .menu-item
        font-size:12px
        .tab-item
          text-align:left
          .tab-link
            padding: 25px 0px
  .slide-enter
    opacity:0
  .slide-enter-to
    opacity:1
  .slide-enter-active
    transition:all 0.3s linear
  .slide-leave
    opacity:1
  .slide-leave-to
    opacity:0
  .slide-leave-active
    transition:all 0.3s linear