.leftWrapper
  position relative
  background-color: #EAEDF1
  overflow auto
  height 100%
  width 300px
  .custom-tree-node
    display inline-block
    flex 1
    span.btn
      margin-left 10px
    input 
      border 1px solid #ccc  
  .operation-wrapper
    height 40px
    padding: 0px 20px
    .operation-inner
      height 15px
      padding: 7px 0px 13px
      border-bottom:  1px solid #ccc
      ul
        li
          float left
          padding 0 15px
          border-right 1px solid #ccc
        li:first-child
          padding-left 0px
        li:last-child
          border-right none
        li:hover
          color #ff6a00  
  .lk-tabs__nav
    display flex
    .lk-tabs__active-bar
      display none
    .lk-tabs__item
      flex 1
  .title
    line-height 40px
  .split
    height 10px
    line-height 10px
  .divided
    border-bottom 2px solid #5F82C8
    margin-bottom 10px
  .tablefields
    h3
      font-weight bold
    .rowfields
      margin-bottom 10px
    .fields
      text-align center
    .fieldsWrapper
      width 500px
      height 500px
      overflow-x hidden

  .list-container
    .tool-list
      li
        float left
        width 33%
        .tool-item
          display inline-block
          white-space nowrap
          overflow hidden
          cursor pointer
          margin: 0px 15px 0px 15px
          .tool-item__name
            line-height 16px
            font-size 12px
            margin-bottom 4px
            color #93A1BA
            text-align center
          .tool-item__icon
            background-size 100% 100%
            background-repeat no-repeat
            position relative
            display inline-block
            margin 8px 16px 0
            border-radius 2px
